{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "drop'in Model",
  "type": "object",
  "required": [ "organization", "name" ],
  "additionalProperties": false,
  "propertyOrder": [ "organization", "name", "app" ],
  "properties": {
    "organization": { "type": "string" },
    "name": { "type": "string" },
    "app": {
      "type": "object",
      "required": [ "name", "version", "pages" ],
      "additionalProperties": false,
      "propertyOrder": [ "name", "version", "theme", "platforms", "pages" ],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "theme": { "type": "string" },
        "platforms": {
          "type": "object",
          "additionalProperties": false,
          "propertyOrder": [ "web", "android", "ios" ],
          "properties": {
            "web": {
              "type": "object",
              "additionalProperties": false,
              "propertyOrder": [ "icon" ],
              "properties": {
                "icon": { "type": "string" }
              }
            },
            "android": {
              "type": "object",
              "required": [ "package", "build" ],
              "additionalProperties": false,
              "propertyOrder": [ "package", "build" ],
              "properties": {
                "package": { "type": "string" },
                "build": { "type": "integer" }
              }
            },
            "ios": {
              "type": "object",
              "required": [ "bundle", "build" ],
              "additionalProperties": false,
              "propertyOrder": [ "bundle", "build" ],
              "properties": {
                "bundle": { "type": "string" },
                "build": { "type": "integer" }
              }
            }
          }
        },
        "pages": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_]+$": {
              "type": "object",
              "required": [ "component", "path" ],
              "additionalProperties": false,
              "propertyOrder": [ "component", "path", "title" ],
              "properties": {
                "component": { "type": "string" },
                "path": { "type": "string" },
                "title": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
